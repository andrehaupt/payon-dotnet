@model PayOn.Examples.Models.PaymentViewModel

@{
    ViewData["Title"] = "Recurring Payment Example";
}
<h1>Initial Payment Result</h1>
<p>As part of the initial payment the card will be tokenized.</p>
<table cellpadding="0" cellspacing="0">
    <tr>
        <th colspan="2" align="center">Result</th>
    </tr>
    <tr>
        <td>Status: </td>
        <td>@Model.Status</td>
    </tr>
</table>
<br />
<br />
<h1>Repeat Payment</h1>
<p>If the initial transaction was successfull, you can create a recurring payment.</p>
@using (Html.BeginForm("RecurringRepeat", "Home", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Payment Details</th>
        </tr>
        <tr>
            <td>RegistrationId (Token): </td>
            <td>
                @Html.TextBoxFor(m => m.RegistrationId)
            </td>
        </tr>
        <tr>
            <td>Brand: </td>
            <td>
                @Html.TextBoxFor(m => m.PaymentBrand)
            </td>
        </tr>
        <tr>
            <td>Amount: </td>
            <td>
                @Html.TextBoxFor(m => m.Amount)
            </td>
        </tr>
        <tr>
            <td>Currency: </td>
            <td>
                @Html.TextBoxFor(m => m.Currency)
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>
}
<br />
<br />
<br />
<br />
<h1>Reverse Payment</h1>
<p>Reverse the initial payment.</p>
@using (Html.BeginForm("Reverse", "Home", FormMethod.Post))
{
    <table cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Payment Details</th>
        </tr>
        <tr>
            <td>Id: </td>
            <td>
                @Html.TextBoxFor(m => m.Id)
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Reverse" /></td>
        </tr>
    </table>
}
<br />
<br />